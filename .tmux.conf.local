tmux_conf_theme_status_right='#{prefix}#{pairing}#{synchronized} , %Y-%m-%d , %Y-W%V-%w , %R , #{?battery_status, #{battery_status},}#{?battery_bar, #{battery_bar},}#{?battery_percentage, #{battery_percentage},} '

